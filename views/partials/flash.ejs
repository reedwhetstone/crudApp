<% if(success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show d-flex justify-content-between align-items-center ps-2 p-1"
        role="alert">
        <%= success %>
            <button type="button" class="btn" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
    </div>
    <% } %>

        <% if(error && error.length) { %>
            <div class="alert alert-danger alert-dismissible fade show d-flex justify-content-between align-items-center ps-2 p-1"
                role="alert">
                <%= error %>
                    <button type="button" class="btn" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
            </div>
            <% } %>