<% layout('layouts/boilerplate') %>

    <div class="card p-5">
        <div class="row">

            <div class="col-4">
                <img class="card-img" src="<%=campground.imageUrl%> " alt="image">
            </div>

            <div class="col-8 card-body">
                <div class="row">
                    <div class="col">
                        <h1 class="card-title">
                            <%= campground.title %>
                        </h1>
                        <h2 class="card-subtitle h3 mb-2 text-muted">
                            <%= campground.location %>
                        </h2>
                    </div>
                    <div class="col d-flex align-items-center justify-content-end">
                        <div class="card ">
                            <div class="card-body">
                                <h4 class="h5">Starting at <br>
                                    $<%=campground.price%> per night
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
                <p class="mt-3">
                    <%= campground.description %>
                </p>
                <div class=" d-flex justify-content-start align-items-center">
                    <div>
                        <a class="btn btn-success me-3" href="/campgrounds/<%=campground._id%>/edit">Edit Campground</a>
                    </div>
                    <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">delete</button>
                    </form>

                </div>
            </div>
        </div>
    </div>