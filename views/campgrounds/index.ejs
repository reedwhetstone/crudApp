<% layout('layouts/boilerplate') %>
    <div class="col-10 offset-1">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>All Campgrounds</h1>
            <div>
                <a class="btn btn-dark" href="/campgrounds/new">New Campground</a>
            </div>
        </div>

        <div class="row d-flex justify-content-between align-items-center">

            <% for (let campground of campgrounds) { %>
                <div class="p-3 mb-3">
                    <div class="row">
                        <div class="col-md-4 d-flex align-items-center">
                            <img class='card-img index-images' src="<%=campground.imageUrl%> " alt="image">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h3 class="card-title">
                                    <%= campground.title %>
                                </h3>
                                <h4 class="h5 card-subtitle mb-2 text-muted">
                                    <%= campground.location %>
                                </h4>
                                <p class="card-text">
                                    <%= campground.description.substring(0,175) %>...
                                </p>
                                <a class="btn btn-outline-primary" href="/campgrounds/<%= campground._id %>">
                                    More Information
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <%} %>
        </div>
    </div>